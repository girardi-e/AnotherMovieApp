<%= render 'shared/banner' %>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">MY LISTS</h3>
    <%= link_to 'CREATE A MOVIE LIST', new_list_path, class:'btn-flat' %>
  </div>
</div>

<div class="container">
  <div class="cards-grid">
    <% @lists.each do |list| %>
      <div class="movie-card">
        <% if list.image_url%>
          <%= image_tag (list.image_url), class: 'movie-card-image' %>
        <% else %>
          <%= image_tag ('card_bg.jpg'), class: 'movie-card-image' %>
        <% end %>
        <%= link_to list.name, list_path(list), class:'movie-card-link'%>
      </div>
    <% end %>
  </div>
</div>
