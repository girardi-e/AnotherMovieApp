<div class="container my-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <h3 class= 'mb-3'>CREATE A NEW MOVIE LIST</h3>

        <%= simple_form_for @list do |f| %>
          <%= f.input :name, :label => 'LIST NAME', placeholder: 'Drama' %>
          <%= f.input :image_url, :label => 'ADD IMAGE URL' %>
          <%= f.button :submit,' CREATE MOVIE LIST', class: 'btn-flat'%>
        <% end %>

      </div>
    </div>
  </div>
</div>
